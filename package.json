    "@types/express": "^4.17.6",
    "@types/fs-extra": "^8.1.0",
    "@types/inquirer": "^7.3.3",
    "@types/node-fetch": "^2.5.11",
    "@types/semver": "^6.2.0",
    "@types/shelljs": "^0.8.8",
    "@types/string-width": "^4.0.1",
    "@types/text-table": "^0.2.2",
    "@types/url-join": "^4.0.1",
