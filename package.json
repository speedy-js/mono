    "typescript": "4.5.2",
    "jest": "27.3.1",
    "jest-cli": "27.3.1",
    "jest-serializer-path": "0.1.15",
    "ts-jest": "27.0.7",
    "strip-ansi": "6.0.1",
    "@speedy-js/publish": "0.1.3"
  },
  "repository": {
    "url": "git@github.com:ulivz/mono.git",
    "type": "git"
