    "conventional-changelog": "^3.1.24",
    "conventional-changelog-cli": "^2.0.31",
    "debug": "^4.3.2",
    "execa": "^3.2.0",
    "fs-extra": "^7.0.0",
    "globby": "^9.0.0",
    "inquirer": "^7.2.0",
    "lerna": "^4.0.0",
    "node-fetch": "^2.6.0",
    "semver": "^6.3.0",
    "shelljs": "^0.8.4",
    "string-width": "^4.2.0",
    "text-table": "^0.2.0",
