{
  "name": "@nomadland/mono",
  "description": "Monorepo development & continuous integration tooling.",
  "version": "0.3.4",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "main": "lib/index.js",
  "bin": {
    "mono": "bin/cli.js"
  },
  "keywords": [
    "workflow",
    "speedy",
    "nomadland",
    "monorepo",
    "release",
    "lerna",
    "continuous integration",
    "tooling"
  ],
  "typings": "src/index.ts",
  "scripts": {
